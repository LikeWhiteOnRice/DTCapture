<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e134292.downtimeCapture" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".newStudyActivity"
            android:label="@string/title_activity_new_study"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".reasonsActivity"
            android:label="Downtime Capture"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".studyActivity"
            android:label="@string/title_activity_study"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".tempActivity"
            android:label="@string/title_activity_temp"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".startDowntimeActivity"
            android:label="@string/title_activity_start_downtime"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".stopDowntimeActivity"
            android:label="@string/title_activity_stop_downtime"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".pickReasonActivity"
            android:label="@string/title_activity_pick_reason"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".studyEndActivity"
            android:label="@string/title_activity_study_end"
            android:screenOrientation="portrait">
        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest>
